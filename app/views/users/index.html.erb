<% provide(:title, "All users") %>
<h1>All users(hidden)</h1>

<h1>All Users</h1>

<%= will_paginate  %>

<ul class="users">
  <% @users.each do |user| %>
  <li>
    <%= gravatar_for user %>
    <%= link_to user.name, user  %>
    <% if current_user.admin? && user != current_user %>
    | <%= link_to "Delete",  user, method: :delete, data: {confirm: 'Are you sure?'}  %>
    <% end %>
  </li>
  <% end %>
</ul>

<%= will_paginate  %>
